{
  "swagger": "2.0",
  "info": {
    "title": "Azure Functions OpenAPI Extension",
    "version": "1.0.0"
  },
  "host": "relecloudconcerts-payment-app.azurewebsites.net",
  "basePath": "/api",
  "schemes": [
    "https"
  ],
  "paths": {
    "/PreAuth": {
      "post": {
        "operationId": "PreAuthPayment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/preAuthPaymentOptions"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The status of the operation",
            "schema": {
              "$ref": "#/definitions/preAuthPaymentResult"
            }
          }
        },
        "security": [
          {
            "function_key": []
          }
        ]
      }
    },
    "/CaptureFunction": {
      "post": {
        "operationId": "CapturePayment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/capturePaymentOptions"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The status of the operation",
            "schema": {
              "$ref": "#/definitions/capturePaymentResult"
            }
          }
        },
        "security": [
          {
            "function_key": []
          }
        ]
      }
    }
  },
  "definitions": {
    "capturePaymentOptions": {
      "type": "object",
      "properties": {
        "holdCode": {
          "type": "string"
        },
        "amountToCapture": {
          "format": "double",
          "type": "number"
        }
      }
    },
    "capturePaymentResult": {
      "type": "object",
      "properties": {
        "status": {
          "default": "captureSuccessful",
          "enum": [
            "captureSuccessful",
            "invalidHoldCode",
            "invalidHoldAmount"
          ],
          "type": "string"
        },
        "confirmationNumber": {
          "type": "string"
        }
      }
    },
    "order": {
      "type": "object",
      "properties": {
        "orderNumber": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/orderItem"
          }
        }
      }
    },
    "orderItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "quantity": {
          "format": "int32",
          "type": "integer"
        },
        "price": {
          "format": "double",
          "type": "number"
        }
      }
    },
    "paymentDetails": {
      "type": "object",
      "properties": {
        "nameOnCard": {
          "type": "string"
        },
        "cardNumber": {
          "type": "string"
        },
        "securityCode": {
          "type": "string"
        },
        "cardType": {
          "default": "visa",
          "enum": [
            "visa"
          ],
          "type": "string"
        },
        "expirationMonthYear": {
          "type": "string"
        }
      }
    },
    "preAuthPaymentOptions": {
      "type": "object",
      "properties": {
        "amount": {
          "format": "double",
          "type": "number"
        },
        "currency": {
          "default": "usd",
          "enum": [
            "usd"
          ],
          "type": "string"
        },
        "paymentDetails": {
          "$ref": "#/definitions/paymentDetails"
        },
        "order": {
          "$ref": "#/definitions/order"
        }
      }
    },
    "preAuthPaymentResult": {
      "type": "object",
      "properties": {
        "status": {
          "default": "fundsOnHold",
          "enum": [
            "fundsOnHold",
            "insufficientFunds",
            "notAValidCard"
          ],
          "type": "string"
        },
        "holdCode": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "function_key": {
      "type": "apiKey",
      "name": "code",
      "in": "query"
    }
  }
}